        "predis/predis": "^1.1",
        "guzzlehttp/guzzle": "^6.3",
        "symfony/dom-crawler": "^3.4",
        "vlucas/phpdotenv": "~2.2",
        "overtrue/wechat": "~4.0",
        "psr/simple-cache": "^1.0"
    },
    "require-dev": {
